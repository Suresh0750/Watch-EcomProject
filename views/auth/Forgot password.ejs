<script>
        
            $("#CustomerLoginForm").validate({
                    rules:{
                        forgetEmail:{
                            required:true,
                            email:true
                        }
                    },
                    submitHandler: async function(CustomerLoginForm,e){
                        e.preventDefault()

                        const email = CustomerLoginForm.forgetEmail.value

                       const data =await fetch(`/forgetPass${email}`,{

                                    method:"POST",
                                    headers:{
                                        "Content-Type":"application/json"
                                    }
                                })  

                        const forGotRes = await data.json()

                        if(forGotRes.success)
                        {
                            window.location.href = "/forgetEmailOtp" // redirect the req for render the forgot Password Otp page
                            // window.location.replace("http://localhost:9001/forgetEmailOtp")
                        }else{
                           
                            window.location.href = "/pass"
                            
                        }
                    }
            })
       
</script>
