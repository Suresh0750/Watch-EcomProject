        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/additional-methods.min.js"></script>
        <script>

            $("#addForm").validate({
                    rules:{
                        categoryName:{
                            required:true,
                            // pattern:/^[a-zA-Z]+$/,
                            pattern:/^[a-zA-Z\s]*$/
                        },
                    description:{
                        required:true,
                        pattern:/^[a-zA-Z0-9]/

                    }
                }
                
        })
        </script>
